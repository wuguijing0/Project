<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>JS 22-24</title>
</head>
<body>
	<div>
	    <label>Number A:<input id="radio-a" type="radio" name="math-obj" value="a"></label><input id="num-a" type="text">
	    <label>Number B:<input id="radio-b" type="radio" name="math-obj" value="b"></label><input id="num-b" type="text">
	</div>
	<div id="btn">
	    <button>判断当前选中的输入框输入内容是否为数字</button>
	    <button>把 A 四舍五入为 B 个小数位数的数字</button>
	    <button>当前选中数字的绝对值</button>
	    <button>对当前选中的数字进行上舍入</button>
	    <button>对当前选中的数字进行下舍入</button>
	    <button>把当前选中的数字四舍五入为最接近的整数</button>
	    <button>返回 A 和 B 中的最高值</button>
	    <button>返回 A 和 B 中的最低值</button>        
	</div>
	<p id="result"></p>

	<script>
		var ra=document.querySelector("#radio-a");
		var rb=document.querySelector("#radio-b");
		var na=document.querySelector("#num-a");
		var nb=document.querySelector("#num-b");
		var btn=document.querySelectorAll("button");
		var result=document.querySelector("#result");
		var mark,num;
		ra.onclick=function(){
			mark=0;
		}
		rb.onclick=function(){
			mark=1;
		}
		function check(){
			if(mark==0){
				num=na.value;
			}
			if(mark==1){
				num=nb.value;
			}
		}

		function isnan(x){
			if(x==1){
				if(isNaN(num)==false){
					return 1;
				}else{
					return 0;
				}
			}
			if(x==2){
				if(isNaN(na.value)==false&&isNaN(nb.value)==false){
					return 1;
				}else{
					return 0;
				}
			}
		}

		btn[0].onclick=btn1;
		btn[1].onclick=btn2;
		btn[2].onclick=btn3;
		btn[3].onclick=btn4;
		btn[4].onclick=btn5;
		btn[5].onclick=btn6;
		btn[6].onclick=btn7;
		btn[7].onclick=btn8;
		
		function btn1(){
			check();
			if(isnan(1)==1){
				result.innerText="数字";
			}else{
				result.innerText="非数字";
			}
		}

		function btn2(){
			if(isnan(2)==0){
				console.log("输入值含有非数字类型");
			}else{
				var t=1;
				for(;nb.value>0;t*=10 ,nb.value--);
				for(;nb.value<0;t/=10,nb.value++);
				result.innerText=Math.round(na.value*t)/t;
			}
		}

		function btn3(){
			check();
			if(isnan(1)==0){
				console.log("输入值含有非数字类型");
			}else{
				result.innerText=Math.abs(num);
			}
		}

		function btn4(){
			check();
			if(isnan(1)==0){
				console.log("输入值含有非数字类型");
			}else{
				result.innerText=Math.ceil(num);
			}
		}

		function btn5(){
			check();
			if(isnan(1)==0){
				console.log("输入值含有非数字类型");
			}else{
				result.innerText=Math.floor(num);
			}
		}

		function btn6(){
			check();
			if(isnan(1)==0){
				console.log("输入值含有非数字类型");
			}else{
				result.innerText=Math.round(num);
			}
		}

		function btn7(){
			if(isnan(2)==0){
				console.log("输入值含有非数字类型");
			}else{
				result.innerText=Math.max(na.value,nb.value);
			}
		}

		function btn8(){
			if(isnan(2)==0){
				console.log("输入值含有非数字类型");
			}else{
				result.innerText=Math.min(na.value,nb.value);
			}
		}
	</script>
</body>
</html>
