<body>
	<div id="erik"></div>
	<script>
		var erik=document.getElementById("erik");
		var timer=null;
		clearInterval(timer);
		var i=16;
		timer=setInterval(function(){
			erik.style.backgroundPositionY=i*480-8160+"px";
			i--;
			if(i==0){
				clearInterval(timer);
			}
		},100);
	</script>
